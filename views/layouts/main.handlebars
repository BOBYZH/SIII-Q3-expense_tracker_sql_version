<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>家庭記帳本</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
</head>

<body class="bg-white">
  <header>
    <nav class="navbar navbar-light bg-light justify-content-between">
      <a class="navbar-brand font-weight-bolder" href="/">家庭記帳本</a>
      {{#if isAuthenticated}}
      <a href="/users/logout" class="btn btn-outline-dark" style="color: coral;">登出</a>
      {{else}}
      <div class="buttons">
        <a href="/users/register" class="btn btn-outline-dark" style="color: coral;">註冊</a>
        <a href="/users/login" class="btn btn-outline-dark" style="color: coral;">登入</a>
      </div>
      {{/if}}
    </nav>
  </header>
  
  <main>
    <div class="container mt-5">
      {{{body}}}      
    </div>
  </main>
  
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
crossorigin="anonymous"></script>
  <script>
     function showTotalAmount() {
      const totalAmount = document.querySelector('#total-amount')
      console.log(totalAmount)
      const amounts = document.querySelectorAll('.amount')
      console.log(amounts)
      let total = 0
      for (let amount of amounts) {
        total += parseInt(amount.innerHTML)
      }
      totalAmount.innerHTML = total
    }
    
    function changeCategoryIcon() {
      const category = document.querySelectorAll('.category')
      for (let el of category) {
        switch (el.innerHTML) {
          case 'domestic':
            el.innerHTML = `<i class="pl-3 h1 fas fa-home"></i>`
            break
          case 'traffic':
            el.innerHTML = `<i class="pl-3 h1 fas fa-shuttle-van"></i>`
            break
          case 'recreation':
            el.innerHTML = `<i class="pl-3 h1 fas fa-grin-beam"></i>`
            break
          case 'diet':
            el.innerHTML = `<i class="pl-3 h1 fas fa-utensils"></i>`
            break
          case 'others':
            el.innerHTML = `<i class="pl-3 h1 fas fa-pen"></i>`
            break
        }
      }
    }
    showTotalAmount()
    changeCategoryIcon()
  </script>
</body>

</html>
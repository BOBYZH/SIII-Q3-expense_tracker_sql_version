<form action="/records" method="POST" class="row">
  <div class="container">
    <div class="w-100 mx-auto row my-3">
      <div class="col-4 " style="font-size: 10px;"p>*</sup>必填欄位</div>
      <div class="col-8 text-center">請輸入你的支出</div>
    </div>
      
    <div class="w-100 mx-auto p-2 row my-3">
      <div class="col-4">名稱<sup>*</sup>：</div>
      <input class="col-8 form-control border border-dark" type="text" name="name" required>
    </div>
              
    <div class="w-100 mx-auto p-2 row my-3">
      <div class="col-4">日期<sup>*</sup>：</div>
      <input class="col-8 form-control border border-dark" type="date" id="date" name="date" value="{{date}}" max="{{date}}" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
    </div>
              
    <div class="w-100 mx-auto p-2 row my-3">
      <div class="col-4">類別<sup>*</sup>：</div>
      <select class="col-8 form-control border border-dark" name="category" required>
        <option disabled selected value>請選擇</option>
        <option value="domestic">家居物業</option>
        <option value="traffic">交通出行</option>
        <option value="recreation">休閒娛樂</option>
        <option value="diet">餐飲食品</option>
        <option value="others">其他</option>
      </select>
    </div>
              
    <div class="w-100 mx-auto p-2 row my-3">
      <div class="col-4">金額<sup>*</sup>：</div>
      <input class="col-8 form-control border border-dark" type="number" step="1" min="0" name="amount" required>
    </div>
    
    <div class="w-100 mx-auto p-2 row my-3">
      <div class="col-4">商家：</div>
      <input class="col-8 form-control border border-dark" type="text" name="merchant">
    </div>
    
    <div class="w-100 mx-auto p-2 row ">
      <div class="col-4"></div>
      <button type="submit" class="btn btn-outline-dark border-dark col-8">新增支出</button>
    </div>
  </div>
</form>